<div class="top-row ps-3 navbar navbar-dark bg-dark">
    <div class="container-fluid d-flex align-items-center">
        <!-- Profile Image wrapped in a link to LinkedIn -->
        <a href="https://www.linkedin.com/in/anton-kogan-developer/details/experience/" target="_blank">
            <img src="images/AntonKogan.jpeg"
                 alt="Anton Kogan" class="rounded-circle me-2" style="width: 40px; height: 40px;" />
        </a>
        <!-- Name wrapped in a link to LinkedIn -->
        <a class="navbar-brand" href="https://www.linkedin.com/in/anton-kogan-developer" target="_blank">
            Anton Kogan
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
<div class="@NavMenuCssClass nav-scrollable bg-dark" @onclick="ToggleNavMenu">
    <nav class="flex-column px-3 py-4">

        <!-- Experience Main -->
        <div class="nav-item mb-2">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-briefcase m-2"></i> Experience
            </NavLink>
        </div>

        <!-- Subpages for each company -->
        <div class="ms-3">
            <div class="nav-item mb-1">
                <NavLink class="nav-link" href="experience/abona">
                    <i class="bi bi-truck m-2"></i> Abona
                </NavLink>
            </div>
            <div class="nav-item mb-1">
                <NavLink class="nav-link" href="experience/kivi">
                    <i class="bi bi-tv m-2"></i> KIVI
                </NavLink>
            </div>
            <div class="nav-item mb-1">
                <NavLink class="nav-link" href="experience/ozon">
                    <i class="bi bi-airplane m-2"></i> Ozon
                </NavLink>
            </div>
            <div class="nav-item mb-1">
                <NavLink class="nav-link" href="experience/onetrak">
                    <i class="bi bi-activity m-2"></i> OneTrack
                </NavLink>
            </div>
        </div>

        <!-- Education -->
        <div class="nav-item mb-2">
            <NavLink class="nav-link" href="Education">
                <i class="bi bi-mortarboard m-2"></i> Education
            </NavLink>
        </div>

        <!-- Certificates -->
        <div class="nav-item">
            <NavLink class="nav-link" href="Certificates">
                <i class="bi bi-award m-2"></i> Certificates
            </NavLink>
        </div>
        
         <!-- Contact Info -->
        <div class="border-top pt-3 small text-muted">
           <p class="mb-1">
               <span class="oi oi-envelope-closed m-2" aria-hidden="true"></span>
               <a href="mailto:contact@antonkogan.de">contact@antonkogan.de</a>
           </p>
            <p class="mb-0">
                <span class="oi oi-people m-2" aria-hidden="true"></span>
                <a href="https://www.linkedin.com/in/anton-kogan-developer/" target="_blank">LinkedIn Profile</a>
            </p>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}