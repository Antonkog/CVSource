@page "/Education"
<div class="mt-5">
    <h2 class="mb-4">Education</h2>
    @foreach (var entry in educationList)
    {
        <div class="row mb-5 align-items-start">
            <!-- Left: Degree -->
            <div class="col-md-4 mb-3">
                <h5 class="d-flex align-items-center">
                    <i class="bi bi-briefcase m-2 text-secondary"></i>
                    @entry.Degree
                </h5>
                <p class="text-muted">@entry.Institution</p>
                <p class="text-muted">@entry.Period</p>
            </div>

            <!-- Right: Institution Info -->
            <div class="col-md-8">
                <h5 class="d-flex align-items-center">
                    <a href="@entry.Site" target="_blank">@entry.Institution</a>
                </h5>

                <ul class="ms-4">
                    @foreach (var detail in entry.Details)
                    {
                        <li>@detail</li>
                    }
                </ul>
            </div>
        </div>
    }

   <h2 class="mt-5">Language</h2>
       @foreach (var language in languageList)
       {
           <div class="row mb-4">
               <div class="col-md-4">
                   <h5 class="d-flex align-items-center">
                       <i class="bi bi-globe m-2 text-secondary"></i>
                       @language.Name
                   </h5>
                   <p class="text-muted">@language.Level</p>
               </div>
           </div>
       }
</div>

